{
    "grid": {
        "M": 200,
        "L": 1
    },

    "simulation": {
        "N": 321,
        "dt": 2.5e-5,
        "xC": 0.25,
        "sigma_x": 0.05,
        "px": 200,
        "yC": 0.5,
        "py": 0,
        "sigma_y": 0.05
    },

    "output": {
        "file_name": "output/probability_density_no_slit.txt",
        "file_name_wavefunction": "output/wavefunction_no_slit.txt",
        "precision": 8,
        "write_interval": 1
    },

    "solver": {
        "method": "gauss_seidel",
        "tolerance": 1e-10,
        "max_iterations": 2000
    },

    "potential": {
        "type": "none",
        "frequency": 1.0,
        "V0": 0
    },

    "slits": { 
        "enabled": false,
        "wall_center": 0.5,
        "wall_thickness": 0.02,
        "slit_aperture": 0.05,
        "num_slits": 2,
        "slit_spacing": 0.05
    },

    "parallelization": {
        "threads": 12
    }
}
