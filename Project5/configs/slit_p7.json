{
    "grid": {
        "M": 200,
        "L": 1
    },

    "simulation": {
        "N": 321,
        "dt": 2.5e-5,
        "xC": 0.25,
        "sigma_x": 0.05,
        "px": 200,
        "yC": 0.5,
        "py": 0,
        "sigma_y": 0.01
    },

    "output": {
        "file_name": "output/probability_density_slit_p7.txt",
        "file_name_wavefunction": "output/wavefunction_slit_p7.txt"
    },

    "solver": {
        "method": "jacobi",
        "tolerance": 1e-4,
        "max_iterations": 2000
    },

    "potential": {
        "type": "none",
        "frequency": 1.0,
        "V0": 1e10
    },

    "slits": { 
        "enabled": true,
        "wall_center": 0.5,
        "wall_thickness": 0.02,
        "slit_aperture": 0.05,
        "num_slits": 2,
        "slit_starts": [0.4, 0.6],
        "slit_ends": [0.45, 0.65]
    },

    "parallelization": {
        "threads": 12
    }
}
